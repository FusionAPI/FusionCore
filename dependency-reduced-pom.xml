<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>Fusion</artifactId>
    <groupId>org.cyberpwn</groupId>
    <version>1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>FusionCore</artifactId>
  <name>FusionCore</name>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>*.sql</include>
          <include>*.txt</include>
          <include>*.yml</include>
          <include>**/*.yml</include>
        </includes>
        <excludes>
          <exclude>**/*.zip</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.zip</include>
          <include>**/*.so</include>
          <include>**/*.dll</include>
          <include>**/*.lib</include>
          <include>**/*.dylib</include>
          <include>**/*.sl</include>
        </includes>
        <excludes>
          <exclude>*.sql</exclude>
          <exclude>*.txt</exclude>
          <exclude>*.yml</exclude>
          <exclude>**/*.yml</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <outputDirectory>${local.release.this}</outputDirectory>
          <finalName>${project.artifactId}-${project.version}</finalName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.cyberpwn:FusionAPI</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dynamic-deployment</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>runbatchfile</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.parent.basedir}\scripts/copy.bat</executable>
                  <arguments>
                    <argument>${project.parent.basedir}\release\FusionCore\FusionCore-1.0.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins\Fusion.jar</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <executable>${project.parent.basedir}\scripts/copy.bat</executable>
              <arguments>
                <argument>${project.parent.basedir}\release\FusionCore\FusionCore-1.0.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins\Fusion.jar</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>fusion-repo</id>
      <url>https://raw.githubusercontent.com/FusionAPI/Fusion/master/repository/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.12-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-lang</artifactId>
          <groupId>commons-lang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-simple</artifactId>
          <groupId>com.googlecode.json-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>guava</artifactId>
          <groupId>com.google.guava</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gson</artifactId>
          <groupId>com.google.code.gson</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>fusionapi</id>
      <url>file://repository</url>
    </repository>
  </distributionManagement>
  <properties>
    <local.description>${project.parent.description}</local.description>
    <local.name>${project.parent.artifactId}</local.name>
    <local.basedir>${project.parent.basedir}</local.basedir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <local.release.this>${local.release}\${project.name}</local.release.this>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

